{
  "name": "stroom",
  "version": "0.9.0",
  "private": true,
  "scripts": {
    "serve": "bundle exec jekyll clean && run-p develop:{webpack,jekyll}",
    "develop:jekyll": "bundle exec jekyll serve --livereload",
    "develop:webpack": "cross-env NODE_ENV=development webpack --watch",
    "production": "cross-env NODE_ENV=production webpack --config webpack.prod.js",
    "deploy": "push-dir --dir=dist --branch=gh-pages --cleanup"
  },
  "dependencies": {
    "autoprefixer": "^9.8.6",
    "tailwindcss": "^1.7.2"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.1",
    "cssnano": "^4.1.10",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.3.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-loader": "^4.1.0",
    "push-dir": "^0.4.1",
    "robotstxt-webpack-plugin": "^7.0.0",
    "style-loader": "^2.0.0",
    "webpack": "^5.10.1",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.7.0"
  }
}
